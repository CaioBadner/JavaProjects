import java.util.Arrays;

import javax.swing.JOptionPane;

public class BinarySearch {

	public static void main(String[] args) {
		
		int[] array = RandomArrayMaker.randomArrayMaker(false, 20, false, 100);
		System.out.println(Arrays.toString(array));
		
		int num = Integer.parseInt(JOptionPane.showInputDialog("What number do you want me to look for?"));
		
		JOptionPane.showMessageDialog(null, "The number " + num + " was seen " + howManyOccurences(array,num) + " times in the array.");
		
	}

	private static int howManyOccurences(int[] a, int num) {
		int found = 0;
		
		int start = 0;
		int end = a.length - 1;
		int place = 0, middle = 0;
				
		while (start <= end) {
			
			middle = (start + end) / 2;
		
			if (a[middle] == num) {
				
				place = middle;
				break;
				
			} else if (a[middle] < num) {
				start = middle + 1;
						
			} else {
				end = middle - 1;
				
			}
		}
		
				
		while (a[place] == num) {
			found ++;
			place --;
		};
		
		place = middle + 1;
		
		while (a[place] == num) {
			found ++;
			place ++;
		};
		
		
		return found;
	}
	
	

}
